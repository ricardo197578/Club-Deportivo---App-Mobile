<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:text="Reportes"
            android:textStyle="bold" android:textSize="22sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRepSociosActivos"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Socios activos" android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnRepCuotasVencidas"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Cuotas vencidas" android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnRepIngresosActividad"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Ingresos por actividad" android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnRepAsistencias"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Asistencias por clase" android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
